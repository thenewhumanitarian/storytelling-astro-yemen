---
const { tag } = Astro.props

// Read path parameters for language and slug
const { path } = Astro.params

const pathParams = path?.toString().split('/')
let lang = pathParams?.[0] || 'en'

if (!lang) {
	// Read path parameters for language and slug
	const { path } = Astro.params

	const pathParams = path?.toString().split('/')
	lang = pathParams?.[0] || 'en'
}
---

<a href={`/tags/${lang}/${tag.toLowerCase()}`} class='inline-block px-3 py-2 m-0 cursor-pointer text-base bg-black'>
	<span class='block sm:font-bold bg-transparent border-transparent hover:underline text-zinc-200'>{tag}</span>
</a>
