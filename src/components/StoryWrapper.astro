---
import StoryGrid from '../components/StoryGrid.astro'
import StoryList from '../components/StoryList.astro'

const { stories } = Astro.props
---

<div class={`stories-container--grid`} id='stories-container--grid'>
	<StoryGrid stories={stories} />
</div>
<div class={`stories-container--list mt-36 lg:mt-20`} id='stories-container--list'>
	<StoryList stories={stories} />
</div>

<style is:global>
	header {
		position: fixed;
		z-index: 9999 !important;
	}

	.stories-container--grid {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		z-index: 5555;
		overflow: hidden;
	}
</style>
