---
import Pergament from './Pergament.astro'

export interface Props {
	contentArray: string[]
}

const { contentArray } = Astro.props as Props
---

{
	contentArray.length > 0 && (
		<Pergament classNames='px-5 py-1'>
			{contentArray.map((line) => {
				if (line !== '') {
					return <p class='text-black' set:html={line} />
				}
			})}
		</Pergament>
	)
}
