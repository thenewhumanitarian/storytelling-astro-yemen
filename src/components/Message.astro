---
import Pergament from './Pergament.astro'

export interface Props {
	contentArray: string[]
	lang: string
}

const { contentArray, lang } = Astro.props as Props
---

{
	contentArray.length > 0 && (
		<Pergament classNames={`px-3 sm:px-5 py-0 sm:py-1 bg-zinc-950 ${lang === 'ar' ? 'text-right' : ''}`} lang={lang}>
			{contentArray.map((line) => {
				if (line !== '') {
					return <p class='text-white sm:text-lg' set:html={line} />
				}
			})}
		</Pergament>
	)
}
