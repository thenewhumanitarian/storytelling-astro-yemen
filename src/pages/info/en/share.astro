---
import StaticPageWrapper from '@components/StaticPageWrapper.astro'
import Title from '@components/Title.astro'
import Subtitle from '@components/Subtitle.astro'
import SEO from '@components/SEO.astro'

const lang = 'en'
---

<SEO slot='seo' title={`The Yemen Listening Project`} description={'Where Yemenis talk, and the world listens.'} />

<StaticPageWrapper lang={lang}>
	<div slot='header'>
		<Title>Share</Title>
		<Subtitle>Tell the world about this!</Subtitle>
	</div>

	<div slot='body'>
		<p class='text-white font-bold text-lg sm:text-xl'>Share buttons etc.</p>
		<p class='text-white'>Coming soon...</p>
	</div>
</StaticPageWrapper>
